<div class="row">
  <div class="large-6 large-centered columns">
    <% @done.each do |task| %>
      <div class="panel">
        <%= link_to task_path(task) do %>
          <div class="task-title"><strong><%= task.title %></strong> for <%= task.team.name %></div>
        <% end %>
        <p><%= truncate(task.body, length: 140, separator: " ") %></p>
        <div>Finished by: <b><%= task.user.name %></b></div>
      </div>
    <% end %>
  </div>
</div>
