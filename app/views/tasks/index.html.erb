<div class="row">
  <div id="tasks" class="large-6 columns">
    <div class="row">
      <div class="large-12 columns">
        <h3 class="column-title">Tasks</h3>
        <%= link_to new_task_path do %>
          <span id="add-task"><i class="icon-plus"></i> Add New Task</span>
        <% end %>
      </div>
    </div>
    <% @tasks.each do |task| %>
      <div class="panel">
        <%= link_to task_path(task) do %>
          <h5><%= task.title %> - <%= task.team.name %></h5>
        <% end %>
        <p><%= truncate(task.body, length: 140, separator: " ") %></p>
        <%= link_to "edit", edit_task_path(task), class: "button small radius" %> <%= link_to "delete", task_path(task), method: "delete", data: { confirm: "Are you sure?" }, class: "button small alert radius" %>
      </div>
    <% end %>
  </div>
  <div id="in-progress" class="large-6 columns">
    <div class="row">
      <div class="large-12 columns">
        <h3 class="column-title">In Progress</h3>
      </div>
    </div>
    <% @in_progress.each do |task| %>
      <div class="panel">
        <%= link_to task_path(task) do %>
          <h5><%= task.title %> - <%= task.team.name %></h5>
        <% end %>
        <p><%= truncate(task.body, length: 140, separator: " ") %></p>
        <p><b><%= task.user.name %></b> is working on this.</p>
        <%= link_to "edit", edit_task_path(task), class: "button small radius" %> <%= link_to "delete", task_path(task), method: "delete", data: { confirm: "Are you sure?" }, class: "button small alert radius" %>
      </div>
    <% end %>
  </div>
</div>
