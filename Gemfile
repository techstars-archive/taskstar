source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '4.0.0'
gem 'pg'
gem 'jquery-rails'
gem 'jquery-turbolinks'
gem 'turbolinks'
gem "devise"
gem 'rails_12factor'

# Asset Stuff
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'zurb-foundation'

# Production Stuff
gem 'unicorn', group: :production

# Development Stuff
group :development do
  gem "better_errors"
  gem "binding_of_caller"
  gem 'pry-rails'
  gem 'pry-debugger'
end

# Other Stuff
group :doc do
  # bundle exec rake doc:rails generates the API under doc/api.
  gem 'sdoc', require: false
end
